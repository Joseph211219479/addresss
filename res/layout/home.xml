<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".address"


        >
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:padding="10dp"
        >



    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Please Confirm Information"
            android:id="@+id/txtWelcome"
            android:padding="10dp"
            />

    <TextView
            android:id="@+id/etEmailConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Email"
            android:textColorHint="#bbbbbb"
            />

    <TextView
            android:id="@+id/etUserNameConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:padding="10dp"
            android:text="First Name"
            android:textColorHint="#bbbbbb"
            />
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/txtLastNameConfirm"
              android:text="Last Name"
              android:textColorHint="#bbbbbb"
              android:padding="10dp"
              android:layout_marginTop="-2dp"
            />
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/txtCellConfirm"
              android:text="Cell Number"
              android:padding="10dp"
              android:layout_marginTop="-2dp"
              android:textColorHint="#bbbbbb"
            />

    <Button
            android:id="@+id/btnSingInConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:text="Confirm"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"
            />
    <Button
            android:id="@+id/btnNotConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:text="Back"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"
            />


</LinearLayout>

</RelativeLayout>